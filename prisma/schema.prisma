generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============ AUTH & TENANT ============

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  passwordHash  String
  name          String
  
  salonId       String?  @unique
  salon         Salon?   @relation(fields: [salonId], references: [id])
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Salon {
  id            String   @id @default(cuid())
  slug          String   @unique
  name          String
  
  logo          String?
  primaryColor  String   @default("#6366f1")
  
  phone         String?
  email         String?
  address       String?
  
  timezone      String   @default("Europe/London")
  currency      String   @default("GBP")
  cancelMinutesAdvance Int @default(60)
  
  plan          String   @default("free")
  
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  owner         User?
  
  categories    ServiceCategory[]
  services      Service[]
  staff         Staff[]
  appointments  Appointment[]
  customers     Customer[]
  workingHours  WorkingHours[]
  scheduleOverrides StaffScheduleOverride[]
  slotReservations SlotReservation[]
  bookingPolicy BookingPolicy?
}

// ============ SERVICES ============

model ServiceCategory {
  id          String    @id @default(cuid())
  name        String
  description String?
  sortOrder   Int       @default(0)
  isActive    Boolean   @default(true)
  
  salonId     String
  salon       Salon     @relation(fields: [salonId], references: [id], onDelete: Cascade)
  
  services    Service[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@index([salonId])
}

model Service {
  id              String           @id @default(cuid())
  name            String
  description     String?
  durationMinutes Int
  price           Float
  category        String?
  sortOrder       Int              @default(0)
  isActive        Boolean          @default(true)
  
  salonId         String
  salon           Salon            @relation(fields: [salonId], references: [id], onDelete: Cascade)
  
  categoryId      String?
  serviceCategory ServiceCategory? @relation(fields: [categoryId], references: [id])
  
  appointments    Appointment[]
  staffServices   StaffService[]
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  
  @@index([salonId])
}

// ============ STAFF ============

model Staff {
  id           String   @id @default(cuid())
  name         String
  role         String?
  active       Boolean  @default(true)
  
  salonId      String
  salon        Salon    @relation(fields: [salonId], references: [id], onDelete: Cascade)
  
  appointments Appointment[]
  workingHours WorkingHours[]
  staffServices StaffService[]
  scheduleOverrides StaffScheduleOverride[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@index([salonId])
}

model StaffService {
  id        String   @id @default(cuid())
  staffId   String
  serviceId String
  staff     Staff    @relation(fields: [staffId], references: [id], onDelete: Cascade)
  service   Service  @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  
  @@unique([staffId, serviceId])
}

model WorkingHours {
  id        String   @id @default(cuid())
  dayOfWeek Int
  startTime String
  endTime   String
  isWorking Boolean  @default(true)
  
  staffId   String
  staff     Staff    @relation(fields: [staffId], references: [id], onDelete: Cascade)
  
  salonId   String
  salon     Salon    @relation(fields: [salonId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([staffId, dayOfWeek])
  @@index([salonId])
}

model StaffScheduleOverride {
  id        String   @id @default(cuid())
  date      DateTime @db.Date
  isDayOff  Boolean  @default(false)
  startTime String?
  endTime   String?
  note      String?
  
  staffId   String
  staff     Staff    @relation(fields: [staffId], references: [id], onDelete: Cascade)
  
  salonId   String
  salon     Salon    @relation(fields: [salonId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([staffId, date])
  @@index([salonId])
}

// ============ APPOINTMENTS ============

model Appointment {
  id            String   @id @default(cuid())
  startTime     DateTime
  endTime       DateTime
  status        String   @default("confirmed")
  
  customerName  String
  customerPhone String
  customerEmail String
  
  manageToken   String   @unique @default(cuid())
  
  salonId       String
  salon         Salon    @relation(fields: [salonId], references: [id], onDelete: Cascade)
  
  serviceId     String
  service       Service  @relation(fields: [serviceId], references: [id])
  staffId       String
  staff         Staff    @relation(fields: [staffId], references: [id])
  customerId    String?
  customer      Customer? @relation(fields: [customerId], references: [id])
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([salonId])
  @@index([salonId, startTime])
}

// ============ CUSTOMERS ============

model Customer {
  id          String   @id @default(cuid())
  email       String
  name        String
  phone       String?
  noShowCount Int      @default(0)
  isBlocked   Boolean  @default(false)
  blockedAt   DateTime?
  
  salonId     String
  salon       Salon    @relation(fields: [salonId], references: [id], onDelete: Cascade)
  
  appointments Appointment[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([salonId, email])
  @@index([salonId])
}

// ============ SLOT RESERVATION ============

model SlotReservation {
  id        String   @id @default(cuid())
  staffId   String
  startTime DateTime
  endTime   DateTime
  sessionId String
  expiresAt DateTime
  
  salonId   String
  salon     Salon    @relation(fields: [salonId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  
  @@unique([staffId, startTime])
  @@index([salonId])
  @@index([expiresAt])
}

// ============ BOOKING POLICY ============

model BookingPolicy {
  id        String   @id @default(cuid())
  title     String   @default("Our Booking Policy")
  policies  String   @db.Text
  
  salonId   String   @unique
  salon     Salon    @relation(fields: [salonId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
